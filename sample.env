# Application Settings
APP_NAME=Aruba Bank Vendor Management API
APP_VERSION=1.0.0
DEBUG=true

# Database Settings (PostgreSQL for M1 Mac compatibility)
#DATABASE_URL=
DATABASE_ECHO=false

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_PREFIX=/api/v1

# CORS Settings
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=["application/pdf"]

# LDAP Settings (Removed - not currently used)
# LDAP_SERVER=
# LDAP_BASE_DN=
# LDAP_BIND_DN=
# LDAP_BIND_PASSWORD=

# Docker Environment Variables
POSTGRES_DB=aruba_bank
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# pgAdmin Settings (Optional)
PGADMIN_DEFAULT_EMAIL=admin@arubabank.com
PGADMIN_DEFAULT_PASSWORD=admin123